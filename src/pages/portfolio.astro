---
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';

const title = 'Portfolio';
const description = 'Apps and projects I have built';
---

<Base head={{ title, description }}>
	<Section>
		<h1 class="pb-2 pt-6 text-4xl font-bold">Portfolio</h1>
		<p class="text-sm text-gray-600 dark:text-gray-400 pb-8">
			Apps and projects I've built
		</p>

		<!-- StartRemoteWork -->
		<article class="mb-16">
			<div class="border-b border-gray-200 dark:border-gray-700 pb-2 mb-6">
				<h2 class="text-2xl font-bold">StartRemoteWork</h2>
				<p class="text-orange-600 font-medium">Find your dream remote job worldwide</p>
			</div>

			<!-- Logo and Feature Highlights -->
			<div class="mb-6 p-6 bg-gray-100 dark:bg-gray-800 rounded-xl">
				<div class="flex flex-col md:flex-row items-center gap-6">
					<!-- Logo -->
					<div class="flex-shrink-0">
						<img
							src="/images/portfolio/startremotework-logo.svg"
							alt="StartRemoteWork logo"
							class="w-24 h-24 rounded-2xl shadow-lg bg-white p-2"
						/>
					</div>
					<!-- Feature Highlights -->
					<div class="flex-1 grid grid-cols-2 gap-3 text-sm">
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-orange-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>196+ remote job listings</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-orange-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>15 job categories</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-orange-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>Multi-source aggregation</span>
						</div>
						<div class="flex items-center gap-2">
							<svg class="w-5 h-5 text-orange-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span>Location-based filtering</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Description with Screenshot -->
			<div class="text-sm space-y-4 mb-6">
				<img
					src="/images/portfolio/startremotework-preview.png"
					alt="StartRemoteWork homepage showing remote job listings and search functionality"
					class="float-right ml-4 mb-4 max-w-sm rounded-xl shadow-lg border border-gray-200 dark:border-gray-700"
				/>
				<p>
					<span class="font-bold text-orange-600">StartRemoteWork</span> is a remote job board
					that aggregates remote work opportunities from companies worldwide. With an intuitive
					search interface and category filters, job seekers can easily find positions in
					development, design, marketing, customer service, and more.
				</p>
				<p>
					The platform features real-time job aggregation from multiple sources, location-based
					filtering by country, and a clean, fast interface optimized for job discovery. Built
					with a focus on performance and SEO to help remote workers find their next opportunity.
				</p>
			</div>

			<!-- Tech Stack -->
			<div class="mb-6">
				<h3 class="text-sm font-bold mb-2 text-gray-600 dark:text-gray-400">Built with</h3>
				<div class="flex flex-wrap gap-2">
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Astro</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">TypeScript</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Cloudflare Pages</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Cloudflare D1</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Cloudflare Workers</span>
				</div>
			</div>

			<!-- Links -->
			<div class="flex flex-wrap gap-4">
				<a
					href="https://startremote.work"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gray-900 dark:bg-white text-white dark:text-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 dark:hover:text-white transition-colors"
				>
