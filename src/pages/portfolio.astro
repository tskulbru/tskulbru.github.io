---
import Base from '@/layouts/Base.astro';
import Section from '@/components/Section.astro';

const title = 'Portfolio';
const description = 'Apps and projects I have built';
---

<Base head={{ title, description }}>
	<Section>
		<h1 class="pb-2 pt-6 text-4xl font-bold">Portfolio</h1>
		<p class="text-sm text-gray-600 dark:text-gray-400 pb-8">
			Apps and projects I've built
		</p>

		<!-- Stao -->
		<article class="mb-16">
			<div class="border-b border-gray-200 dark:border-gray-700 pb-2 mb-6">
				<h2 class="text-2xl font-bold">Stao</h2>
				<p class="text-orange-600 font-medium">Stand more. Sit less. Feel better.</p>
			</div>

			<!-- Screenshots -->
			<div class="flex flex-col md:flex-row gap-4 mb-6 justify-center">
				<img
					src="/images/portfolio/stao-1.png"
					alt="Stao main timer screen showing standing mode"
					class="w-full md:w-48 rounded-2xl shadow-lg"
				/>
				<img
					src="/images/portfolio/stao-2.png"
					alt="Stao statistics screen showing daily and weekly progress"
					class="w-full md:w-48 rounded-2xl shadow-lg"
				/>
				<img
					src="/images/portfolio/stao-3.png"
					alt="Stao settings screen for customizing intervals"
					class="w-full md:w-48 rounded-2xl shadow-lg"
				/>
			</div>

			<!-- Description -->
			<div class="text-sm space-y-4 mb-6">
				<p>
					<span class="font-bold text-orange-600">Stao</span> is a standing desk companion app
					that helps you build healthier habits by providing smart reminders to balance sitting
					and standing throughout your workday.
				</p>
				<p>
					Key features include customizable sitting/standing intervals, gentle non-intrusive
					notifications, detailed progress tracking with daily, weekly, and monthly statistics,
					and a privacy-first approach where all data stays on your device.
				</p>
			</div>

			<!-- Tech Stack -->
			<div class="mb-6">
				<h3 class="text-sm font-bold mb-2 text-gray-600 dark:text-gray-400">Built with</h3>
				<div class="flex flex-wrap gap-2">
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Flutter</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Riverpod</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Firebase</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-200 dark:bg-gray-700">Hive</span>
				</div>
			</div>

			<!-- Platforms -->
			<div class="mb-6">
				<h3 class="text-sm font-bold mb-2 text-gray-600 dark:text-gray-400">Platforms</h3>
				<div class="flex flex-wrap gap-2">
					<span class="px-3 py-1 text-xs rounded-full bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300">iOS</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500">Android (Soon)</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500">macOS (Soon)</span>
					<span class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500">Windows (Soon)</span>
				</div>
			</div>

			<!-- Links -->
			<div class="flex flex-wrap gap-4">
				<a
					href="https://www.stao.app/"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-gray-300 dark:border-gray-600 hover:border-orange-600 hover:text-orange-600 transition-colors"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
					</svg>
					Website
				</a>
				<a
					href="https://apps.apple.com/app/stao-standing-desk-reminder/id6756825085"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-gray-900 dark:bg-white text-white dark:text-gray-900 hover:bg-orange-600 dark:hover:bg-orange-600 dark:hover:text-white transition-colors"
