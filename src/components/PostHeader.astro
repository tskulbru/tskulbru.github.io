---
import { formatDate } from '@/utils/data.util';
import Section from './Section.astro';
import Tags from './Tags.astro';
import PinnedBadge from './PinnedBadge.astro';

interface Props {
	title: string;
	author: string;
	tags: string[];
	minutesRead: string;
	pubDate: string;
	modifiedDate?: string;
	isPinned?: boolean;
	img: {
		src: string;
		alt: string;
	};
	blueskyUri?: string;
}

const { title, pubDate, modifiedDate, tags, minutesRead, img, isPinned = false } = Astro.props;

const formattedDate = formatDate(pubDate);
const formattedModifiedDate = modifiedDate ? formatDate(modifiedDate) : null;
const showModifiedDate = modifiedDate && new Date(modifiedDate) > new Date(pubDate);
---

<Section>
	<div class="flex flex-col items-center">
		<div class="relative px-14 pt-6 pb-4 text-center max-w-screen-md mx-auto">
			{isPinned && <PinnedBadge size="md" class="absolute top-6 left-10 -translate-y-1/2" />}
			<p class="text-4xl font-bold">{title}</p>
		</div>
		<div class="pb-4">
			<Tags tags={tags} withHref={true} />
		</div>
		<div class="text-sm pb-6">
			<span>{formattedDate}</span>
			{showModifiedDate && (
				<span class="text-gray-500 dark:text-gray-400"> Â· Updated {formattedModifiedDate}</span>
			)}
			<span> - {minutesRead}</span>
		</div>

		{img.src ? <img src={img.src} alt={img.alt} class="w-full max-w-4xl h-auto rounded-lg" /> : null}
	</div>
</Section>
